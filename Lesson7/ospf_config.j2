{%- if ospf_priority %}
interface vlan 1
   ip ospf priority {{ ospf_priority }}
{% endif %}
router ospf {{ ospf_process_id }}
   passive-interface default
   {%- for int in ospf_active_interfaces %}
   no passive-interface {{ int }}
   {%- endfor %}
   {%- for net in ospf_area0_networks %}
   network {{ net }} area 0.0.0.0
   {%- endfor %}
   max-lsa 12000
